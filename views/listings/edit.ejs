<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Edit Listing Details</h3>
    <form action="/listings/<%= listing._id %>?_method=PUT" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
      
      <!-- Title -->
      <div class="mb-3">
        <label for="title" class="form-label">Enter Title</label>
        <input
          type="text"
          name="listing[title]"
          value="<%= listing.title %>"
          placeholder="Enter Title here..."
          class="form-control"
          required
        />
        <div class="valid-feedback">Title looks good!</div>
      </div>

      <!-- Description -->
      <div class="mb-3">
        <label for="description" class="form-label">Enter Description</label>
        <textarea
          name="listing[description]"
          id="listings"
          rows="3"
          cols="40"
          placeholder="Enter Description..."
          class="form-control"
          required
        ><%= listing.description %></textarea>
        <div class="invalid-feedback">Please enter a short description</div>
        
      </div>

      <div class="mb-3">
        Original listing image<br>
        <img src="<%=originalImageUrl%>"/>
      </div>

      <!-- Image URL (Ensure it keeps existing image if not changed) -->
      <div class="mb-3">
        <label for="image" class="form-label">Upload New Image</label>
        <input
          type="file"
          id="image"
          name="listing[image][url]"
          value="<%= listing.image ? listing.image.url : '' %>"
          placeholder="Enter Image URL here..."
          class="form-control"
        />
        
      </div>

      <!-- Price -->
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Enter Price</label>
          <input
            type="number"
            name="listing[price]"
            value="<%= listing.price %>"
            placeholder="Enter Price here..."
            class="form-control"
            required
          />
          <div class="invalid-feedback">Price should be valid</div>
        </div>

        <!-- Country -->
        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Enter Country</label>
          <input
            type="text"
            name="listing[country]"
            value="<%= listing.country %>"
            placeholder="Enter Country here..."
            class="form-control"
            required
          />
          <div class="invalid-feedback">Country name should be valid</div>
        </div>
      </div>

      <!-- Location -->
      <div class="mb-3">
        <label for="location" class="form-label">Enter Location</label>
        <input
          type="text"
          name="listing[location]"
          value="<%= listing.location %>"
          placeholder="Enter Location here..."
          class="form-control"
          required
        />
        <div class="invalid-feedback">Location should be valid</div>
      </div>

      <button class="btn btn-dark edit-btn mt-3">Submit</button>
    </form>
  </div>
</div>
